<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/space8"
    android:paddingHorizontal="@dimen/space16">

    <ImageView
        android:id="@+id/ivCode"
        android:layout_width="@dimen/space48"
        android:layout_height="@dimen/space48"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/shape_round" />

    <TextView
        android:id="@+id/tvCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        style="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toTopOf="@id/ivCode"
        app:layout_constraintBottom_toBottomOf="@id/ivCode"
        app:layout_constraintStart_toStartOf="@id/ivCode"
        app:layout_constraintEnd_toEndOf="@id/ivCode"
        tools:text="C" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space16"
        android:layout_marginEnd="@dimen/space8"
        style="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintTop_toTopOf="@id/ivCode"
        app:layout_constraintBottom_toBottomOf="@id/ivCode"
        app:layout_constraintStart_toEndOf="@id/ivCode"
        app:layout_constraintEnd_toStartOf="@id/tvSymbol"
        tools:text="Crypto.com" />

    <TextView
        android:id="@+id/tvSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintBaseline_toBaselineOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="CRO" />

</androidx.constraintlayout.widget.ConstraintLayout>